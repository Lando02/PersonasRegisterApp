@model IEnumerable<PersonasRegisterApp.Models.Persona>

@{
    ViewData["Title"] = "Personas";
}

<h1>Personas</h1>

<p>
    <a asp-action="Create">Registrar nueva persona</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Documento de Identidad</th>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>Fecha de Nacimiento</th>
            <th>Contactos</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.DocumentoIdentidad</td>
            <td>@item.Nombres</td>
            <td>@item.Apellidos</td>
            <td>@item.FechaNacimiento.ToShortDateString()</td>
            <td>
                @foreach (var contacto in item.Contactos)
                {
                    <div>
                        @if (!string.IsNullOrEmpty(contacto.Email))
                        {
                            <p>Email: @contacto.Email</p>
                        }
                        @if (!string.IsNullOrEmpty(contacto.DireccionFisica))
                        {
                            <p>Dirección: @contacto.DireccionFisica</p>
                        }
                        @if (!string.IsNullOrEmpty(contacto.NumeroTelefonico))
                        {
                            <p>Teléfono: @contacto.NumeroTelefonico</p>
                        }
                    </div>
                }
            </td>
            <td>
                <!-- Aquí puedes agregar botones para Editar, Detalles, Eliminar, etc. -->
            </td>
        </tr>
}
    </tbody>
</table>
